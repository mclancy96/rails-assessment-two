<h1><%= @vendor.name %></h1>
<% if flash[:notice] %>
  <div class="notice" style="color: green;"><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert" style="color: red;"><%= flash[:alert] %></div>
<% end %>
<h2>Sweets</h2>
<ul>
  <% @vendor.sweets.each do |sweet| %>
    <li><%= link_to sweet.name, sweet %></li>
  <% end %>
</ul>
<h3>Select Vendor's Sweet</h3>
<%= render 'sweets/add_sweet_form' %>
